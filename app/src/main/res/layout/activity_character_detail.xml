<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/detailRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1D1F23">

    <ImageView
        android:id="@+id/detailCharacterImage"
        android:layout_width="0dp"
        android:layout_height="320dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/detailCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-40dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="32dp"
        app:cardUseCompatPadding="false"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#262930"
        app:layout_constraintTop_toBottomOf="@id/detailCharacterImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/detailName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rick Sanchez"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="22sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="6dp">

                    <View
                        android:id="@+id/detailStatusDot"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/status_dot"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:id="@+id/detailStatusSpecies"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alive â€¢ Human"
                        android:textColor="#C7CAD2"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/detailGenderLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Gender:"
                    android:textColor="#9CA0AA"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/detailGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/detailLocationLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Last known location:"
                    android:textColor="#9CA0AA"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/detailLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Citadel of Ricks"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/detailFirstSeenLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="First seen in:"
                    android:textColor="#9CA0AA"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/detailFirstSeen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pilot"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/detailEpisodes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Episodes: 51"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/detailId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="ID: 2"
                    android:textColor="#9CA0AA"
                    android:textSize="13sp" />

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <ProgressBar
        android:id="@+id/detailProgress"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
